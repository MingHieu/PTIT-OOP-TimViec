<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".views.JobDetailsScreen">

    <LinearLayout
        android:id="@+id/job_details_job_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/job_details_screen_company_logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_company" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp">

                <TextView
                    android:id="@+id/job_details_screen_job_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="JAVA DEVELOPMENT [HCM - ĐN - HN - REMOTE]"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/job_details_screen_company_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="KMS TECNOLOGY VIETNAM" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/job_details_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/job_details_job_title"
        android:orientation="vertical">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

<!--        <androidx.viewpager2.widget.ViewPager2-->
<!--            android:id="@+id/pager"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_weight="1" />-->


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/job_details_button_wrapper"
        android:layout_below="@id/job_details_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <com.example.timviec.components.CustomButton
            android:id="@+id/job_details_message"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:custom_button_text="Nhắn tin"
            android:paddingHorizontal="20dp"
            app:custom_button_type="secondary"/>



        <com.example.timviec.components.CustomButton
            android:id="@+id/job_details_apply"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:custom_button_text="Ứng tuyển ngay"
            android:layout_weight="1"
            android:paddingHorizontal="20dp" />
    </LinearLayout>

</RelativeLayout>
