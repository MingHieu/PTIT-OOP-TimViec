<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".views.SignupScreen">

    <include layout="@layout/custom_action_bar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Đăng ký"
        android:textColor="@color/on_background"
        android:textSize="32sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp">

        <LinearLayout
            android:id="@+id/sign_up_name_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.example.timviec.components.CustomInput
                android:id="@+id/sign_up_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                app:custom_input_placeholder="Họ"
                app:custom_input_text="Họ"
                app:custom_input_type="text" />

            <com.example.timviec.components.CustomInput
                android:id="@+id/sign_up_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                app:custom_input_placeholder="Tên"
                app:custom_input_text="Tên"
                app:custom_input_type="text" />

        </LinearLayout>

        <com.example.timviec.components.CustomInput
            android:id="@+id/sign_up_enterprise_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:custom_input_placeholder="Nhập tên doanh nghiêp"
            app:custom_input_text="Doanh nghiệp"
            app:custom_input_type="text" />

        <com.example.timviec.components.CustomInput
            android:id="@+id/sign_up_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:custom_input_placeholder="Nhập Email"
            app:custom_input_text="Email"
            app:custom_input_type="text" />

        <com.example.timviec.components.CustomInput
            android:id="@+id/sign_up_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:custom_input_placeholder="Nhập Mật khẩu"
            app:custom_input_text="Mật khẩu"
            app:custom_input_type="password" />

        <com.example.timviec.components.CustomInput
            android:id="@+id/sign_up_repeat_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:custom_input_placeholder="Nhập lại mật khẩu"
            app:custom_input_text="Nhập lại mật khẩu"
            app:custom_input_type="password" />

        <CheckBox
            android:id="@+id/sign_up_checkbox_condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:buttonTint="@color/primary"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="Tôi đồng ý với các Điều khoản dịch vụ và Chính sác bảo mật"
            android:translationX="-5dp" />

        <com.example.timviec.components.CustomButton
            android:id="@+id/sign_up_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:custom_button_text="Đăng ký" />
    </LinearLayout>
</LinearLayout>