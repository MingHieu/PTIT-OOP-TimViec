<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.SignupUserScreen">

    <include layout="@layout/custom_action_bar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Đăng ký"
        android:textColor="@color/on_background"
        android:textSize="32sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp">

        <com.example.timviec.components.CustomInput
            android:id="@+id/sign_up_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            app:custom_input_placeholder="Nhập họ và tên của bạn"
            app:custom_input_text="Họ và tên"
            app:custom_input_type="text" />

        <com.example.timviec.components.CustomInput
            android:id="@+id/sign_up_user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:custom_input_placeholder="Nhập email của bạn"
            app:custom_input_text="Email"
            app:custom_input_type="text" />

        <com.example.timviec.components.CustomInput
            android:id="@+id/sign_up_user_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:custom_input_placeholder="Nhập mật khẩu"
            app:custom_input_text="Mật khẩu"
            app:custom_input_type="password" />

        <com.example.timviec.components.CustomInput
            android:id="@+id/sign_up_user_repeat_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:custom_input_placeholder="Nhập lại mật khẩu"
            app:custom_input_text="Xác nhận mật khẩu"
            app:custom_input_type="password" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="@string/privacy_policy"
            android:textColor="@color/on_surface" />

        <com.example.timviec.components.CustomButton
            android:id="@+id/sign_up_user_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:custom_button_text="Đăng ký" />
    </LinearLayout>
</LinearLayout>