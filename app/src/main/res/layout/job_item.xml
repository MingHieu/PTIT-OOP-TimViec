<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/job_item"
    android:background="@color/surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/job_item_wrapper"
        android:orientation="vertical"
        android:paddingVertical="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/img_default_user" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/job_item_name"
                    android:text="Tên Công Việc"
                    android:textColor="@color/on_surface"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/job_item_expectSalary"
                    android:text="Up to 1000$"
                    android:textColor="@color/gray_600" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/job_item_quantity"
                    android:text="Cần tuyển 5 người"
                    android:textColor="@color/gray_400" />

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:id="@+id/job_item_requirement"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Trên một năm kinh nghệm"
            android:textColor="@color/on_surface" />

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/job_item_benefit"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Được hưởng lương tháng 13"
            android:textColor="@color/on_surface" />

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/job_item_description"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="- Dòng 1\n- Dòng 2\n- Dòng 3"
            android:textColor="@color/on_surface" />


    </LinearLayout>

</androidx.cardview.widget.CardView>