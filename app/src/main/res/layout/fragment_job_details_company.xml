<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".views.JobDetailsCompany">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:padding="16dp"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="@color/gray_10"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Công ty Cổ phần Giải pháp Công nghệ CARO"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface"
                    android:textSize="20dp" />

                <LinearLayout
                    android:paddingTop="32dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardBackgroundColor="@color/green_10"
                        android:elevation="0dp"
                        app:cardCornerRadius="50dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_place_holder_green"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Địa chỉ công ty:"
                            android:layout_marginBottom="4dp"
                            android:textColor="@color/gray_600" />

                        <TextView
                            android:layout_width="251dp"
                            android:layout_height="wrap_content"
                            android:text="Tầng 7, Tòa nhà số 8, Ngõ 21 Lê Văn Lương, Nhân Chính, Thanh Xuân Hà Nội."
                            android:textColor="@color/on_surface"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:background="@color/gray_200"
                    android:layout_marginLeft="76dp"
                    android:layout_height="1dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingVertical="16dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="50dp"
                        android:elevation="0dp"
                        app:cardBackgroundColor="@color/green_10">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_web"
                            android:layout_gravity="center" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Website công ty:"
                            android:layout_marginBottom="4dp"
                            android:textColor="@color/gray_600" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="caro.vn"
                            android:textColor="@color/on_surface"
                            android:textStyle="bold" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="@color/gray_10"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Giới thiệu chung"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:paddingBottom="8dp"
                    android:textColor="@color/on_surface" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Chúng tôi là ai?\n
CARO là một Startup công nghệ đang phát triển rất nhanh về quy mô. Với tầm nhìn xây dựng một siêu ứng dụng hàng đầu Việt Nam trong vòng 3 năm tới, với thế mạnh riêng và cách làm khác biệt, chúng tôi đã nhận được sự tin tưởng của nhiều nhà đầu tư chiến lược để xây dựng và phát triển sản phẩm một cách đột phá."
                    android:textColor="@color/on_surface" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:background="@color/gray_200"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Việc làm cùng công ty"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface" />

                <com.example.timviec.components.JobCard
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:job_card_job_company="Công ty giải pháp và công nghệ CARO"
                    app:job_card_job_time="Còn 2 tháng nữa"
                    app:job_card_job_money="Up to 1000$"
                    app:job_card_job_address="Hà Nội"
                    app:job_card_job_name="Java Development" />

                <com.example.timviec.components.JobCard
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:job_card_job_company="Công ty giải pháp và công nghệ CARO"
                    app:job_card_job_time="Còn 2 tháng nữa"
                    app:job_card_job_money="Up to 1000$"
                    app:job_card_job_address="Hà Nội"
                    app:job_card_job_name="Java Development" />

            </LinearLayout>



        </LinearLayout>


    </ScrollView>

</LinearLayout>