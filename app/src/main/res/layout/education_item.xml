<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/education_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/surface">

    <LinearLayout
        android:id="@+id/education_item_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingVertical="10dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/img_default_user" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/education_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Học Viện Công Nghệ Bưu Chính Viễn Thông ( Phía Bắc )"
                android:textColor="@color/on_surface"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/education_item_major"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Công nghệ thông tin"
                android:textColor="@color/gray_600" />

            <TextView
                android:id="@+id/education_item_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10/2020 - Hiện tại"
                android:textColor="@color/gray_400" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>