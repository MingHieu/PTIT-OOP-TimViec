<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/surface"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/notification_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notification Title"
            android:textColor="@color/on_surface"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notification_card_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notification Content"
            android:textColor="@color/on_surface" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/notification_card_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Notification Time"
                android:textColor="@color/gray_600" />

            <androidx.cardview.widget.CardView
                android:id="@+id/notification_card_unread"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="center_vertical"
                app:cardBackgroundColor="@color/primary"
                app:cardCornerRadius="100dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>