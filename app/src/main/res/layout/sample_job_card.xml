<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/surface"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:scaleType="fitStart"
            android:src="@drawable/ic_company" />

        <TextView
            android:id="@+id/job_card_job_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="jbsvdkfzbdakxjbvkdab kcbkbvfkb "
            android:textColor="@color/on_surface"
            android:textSize="20dp"
            android:paddingLeft="10dp"/>

    </LinearLayout>


    <TextView
        android:id="@+id/job_card_job_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cong ty abc"
        android:textColor="@color/on_surface"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_dollar_symbol" />

            <TextView
                android:id="@+id/job_card_job_money"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="30-50 trieu"
                android:textColor="@color/on_surface"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:paddingTop="4dp"
                android:src="@drawable/pin" />

            <TextView
                android:id="@+id/job_card_job_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Ha tinh city"
                android:textColor="@color/on_surface"
                android:textSize="16dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="10dp"
        android:background="@color/gray_400" />

    <TextView
        android:id="@+id/job_card_job_time"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:text="Con 18 de ung tuyen"
        android:textColor="@color/on_surface"
        android:textSize="16dp" />


</LinearLayout>



